FROM python:3.11-slim

WORKDIR /app

# Install Nginx and supervisor
RUN apt-get update && apt-get install -y nginx supervisor nodejs npm && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Configure Nginx
RUN echo 'daemon off;' >> /etc/nginx/nginx.conf
COPY frontend/react-app/nginx.conf /etc/nginx/conf.d/default.conf
RUN ln -sf /app/frontend/build /var/www/html

# Configure supervisor for development
COPY supervisord.dev.conf /etc/supervisor/conf.d/supervisord.conf

# Install Python dependencies
COPY backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install pytest && \
    rm requirements.txt

# Create uploads directory
RUN mkdir -p /app/uploads

# Expose ports
EXPOSE 80 8000

# Set environment variables
ENV PYTHONPATH=/app
ENV UPLOADS_DIR=/app/uploads

# Command to run the application using supervisor
CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]